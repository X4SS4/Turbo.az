<Application x:Class="TurboAz.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TurboAz"
             xmlns:v="clr-namespace:TurboAz.Views"
             xmlns:vm="clr-namespace:TurboAz.ViewModels">
    <Application.Resources>
        
        <DataTemplate DataType="{x:Type vm:ModeratorViewModel}">
            <v:ModeratorWindow/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:GuestViewModel}">
            <v:GuestWindow/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:AdminViewModel}">
            <v:AdminWindow/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:UserViewModel}">
            <v:UserWindow/>
        </DataTemplate>

    </Application.Resources>
</Application>
